pipeline {
  agent { label 'macos' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKER_HUB_CREDS = credentials('dhiraj-docker-hub')
    AWS_CREDS = credentials('dhiraj-aws-cred')
  }
  stages {
    stage('Tooling versions') {
      steps {
        sh '''
          docker --version
          docker-compose version
        '''
      }
    }
    stage('Build') {
      steps {
        sudo sh 'docker context use default'
        sudo sh 'docker-compose build'
        sudo sh 'docker-compose push'
      }
    }
    stage('Deploy') {
      steps {
        sudo sh 'docker context use myecscontext'
        sudo sh 'docker compose up'
        sudo sh 'docker compose ps --format json'
      }
    }
  }
}
